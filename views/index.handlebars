<div class="container-fluid con-head">
  <div class="row">
    <div class="col-md-6 col-head-head">
      <h1 class="h1-title2">hamburgers?</h1>
      <h1 class="h1-title"><b>MAN</b>burgers!</h1>
    </div>
    <div class="col-md-6 col-head-img">
      <img class="img-head" src="../assets/img/Manburger.png">
    </div>
  </div>
</div>
<div class="container-fluid">
  <video autoplay muted loop id="myVideo">
  <source src="../assets/img/RisingHeat (1).mp4" type="video/mp4">
</video>
<div class="container con-bod">
  <div class="row">
    <div class="col-md-6">
  <h2 class="h2-2">YOUR TROUGH.</h2>

  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
  </ul>
</div>
<div class="col-md-6">
  <h2 class="h2-2">Already had em'</h2>

  <ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
  </ul>
</div>
</div>
</div>
<div class="container con-bod">

  <h2 class="h2-2">Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="burger_name">
    </div>

    <div class="form-group">
      <label for="devoured">devoured?</label><br>
      <input type="radio" name="devoured" value="1" checked> devoured!<br>
      <input type="radio" name="devoured" value="0"> not devoured
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>
</div>